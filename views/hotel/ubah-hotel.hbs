<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Ubah hotel</h3>
                </div>
                <div class="card-body">
                    <form action="/admin/kamar/{{ hotel.id }}/update" method="post">
                        <div class="form-group">
                            <label for="inputNama">Nama Hotel</label>
                            <input type="text" class="form-control" name="nama_hotel" placeholder="Nama Hotel"
                                value="{{ hotel.nama_hotel }}" id="inputNama">
                        </div>
                        <div class="form-group">
                            <label for="inputTempatTidur">Alamat Hotel</label>
                            <input type="text" class="form-control" name="alamat" placeholder="Alamat hotel"
                                value="{{ hotel.alamat }}" id="inputTempatTidur">
                        </div>
                </div>
                <div class="form-group">
                    <a href="/admin/hotel/informasi-hotel"><button type="button" class="btn btn-warning"
                            style="color: white;">Kembali</button></a>

                    <button type="submit" class="btn btn-info" style="float: right">Simpan</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>