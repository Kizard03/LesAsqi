<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <div id="sidebar-container" class="sidebar-expanded d-none d-md-block">
                <ul class="list-group">
                    <a href="/admin/hotel/informasi-hotel"
                        class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span class="menu-collapsed">Informasi Hotel</span>
                        </div>
                    </a>
                    <br>
                    <a href="/admin/kamar/list" data-toggle="collapse" aria-expanded="false"
                        class="bg-secondary list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span class="menu-collapsed" style="color: #fff;">Informasi Kamar</span>
                        </div>
                    </a>
                </ul>
            </div>
        </div>
        <div class="col" style="padding: 40px">
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="search..." aria-label="Search">
            </form>
            <a href="/admin/kamar/tambah-kamar"> <button class="btn btn-primary" style="float: right; margin: 5px">+
                    Tambah</button></a>
            <br>
            <table class="table table-striped">
                <thead>
                    <tr style="text-align: center;">
                        <th scope="col">Nomor Kamar</th>
                        <th scope="col">Jumlah Tempat Tidur</th>
                        <th scope="col">Fasilitas Kamar</th>
                        <th scope="col">Harga/hari</th>
                        <th scope="col">Opsi</th>
                    </tr>
                </thead>
                {{#each kamar}}
                <tbody>
                    <tr style="text-align: center;">
                        <td>{{ no_kamar }}</td>
                        <td>{{ jumlah_kamar }}</td>
                        <td>{{ fasilitas_kamar }}</td>
                        <td>{{ harga }}</td>
                        <td>
                            <a href="/admin/kamar/{{ id }}/delete"><button class="btn btn-danger"
                                    style="float: right; margin: 5px"
                                    onclick="return confirm ('Apakah yakin ingin menghapus data ini?')">Hapus</button></a>

                            <a href="/admin/kamar/edit/{{ id }}"><button class="btn btn-warning"
                                    style="float: right; margin: 5px">Ubah</button></a>
                        </td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>
    </div>
</div>