<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Penambahan Kamar</h3>
                </div>
                <div class="card-body">
                    <form action="/admin/kamar/tambah-kamar" method="post">
                        <div class="form-group">
                            <label for="">Nomor Kamar</label>
                            <input type="text" class="form-control" name="no_kamar" placeholder="Nomor Kamar">
                        </div>
                        <div class="form-group">
                            <label for="">Jumlah Tempat Tidur</label>
                            <input type="text" class="form-control" name="jumlah_kamar"
                                placeholder="Jumlah Tempat Tidur">
                        </div>
                        <div class="form-group">
                            <label for="">Fasilitas Kamar</label>
                            <input type="text" class="form-control" name="fasilitas_kamar"
                                placeholder="Fasilitas Kamar">
                        </div>
                        <div class="form-group">
                            <label for="">Harga Kamar/hari</label>
                            <input type="text" class="form-control" name="harga" placeholder="Harga Kamar">
                        </div>
                        <div class="form-group">
                            <a href="/kamar/list"><button type="button" class="btn btn-warning"
                                    style="color: white;">Kembali</button></a>

                            <button type="submit" class="btn btn-info" style="float: right">Tambahkan</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>